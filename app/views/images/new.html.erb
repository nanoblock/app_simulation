<div class="image-view">
  <div class="container">
    <%= form_tag images_path, class: 'dropzone', id: 'upload-dropzone', remote: true, authenticity_token: true do %>
    <h2>Drop files here to upload an image.</h2>
      <div class="fallback">
        <%= file_field_tag('picture[image]') %>
      </div>
    <% end %>

    <div id='preview'></div>

  </div>
</div>

<script type="text/javascript">
  (function() {
      var ev = new $.Event('display'),
          orig = $.fn.css;
      $.fn.css = function() {
          orig.apply(this, arguments);
          $(this).trigger(ev);
      }
  })();

  Dropzone.autoDiscover = false;

  var headlineDropzone = new Dropzone("#upload-dropzone", {

  paramName: 'image[photo]',
  maxFilesize: 5, // in MB
  maxFiles: 100,
  addRemoveLinks: false,
  parallelUploads: 100,
  // thumbnailWidth: 450,
  // thumbnailHeight: 500,
  clickable: true,
  // createImageThumbnails: false,
  previewContainer: '#preview',
  previewTemplate: "\<div class=\"dz-preview dz-file-preview\">\n\
  <div class=\"dz-remove\">DELETE</div>\n\
  <div class=\"overlay\"><span>Image Link</span></div>\n\
  <img class=\"dz-thumbnail\" data-dz-thumbnail>\n\
    </div>\n\
    ",
    // \<div class=\"thumbnail-name dz-filename\"><span data-dz-name></span></div>\n\
// <img src=\"http://image.flaticon.com/icons/svg/61/61848.svg\" width=\"72\" height=\"72\">

    // "\<div class=\"dz-preview dz-file-preview\">\n\
    //   <div class=\"dz-details\">\n\
    //     <div class=\"clearfix\">\n\
    //       <img class=\"dz-thumbnail\" data-dz-thumbnail>\n\
    //       <div class=\"dz-success-mark\" style=\"display:none;\"><i class=\"fa fa-2x fa-check-circle\"></i></div>\n\
    //     </div>\n\
    //     <div class=\"dz-progress\"><span class=\"dz-upload\" data-dz-uploadprogress></span></div>\n\
    //     <div>\n\
    //       <div class=\"dz-my-separator\"> hello </div>\n\
    //     </div>\n\
    //   </div>\n\
    // </div>\n\
    // "
  acceptedFiles:'.jpg, .png, .jpeg, .gif', // type of files

  init: function(){

    this.on('dragenter', function(event) {
      // $('#upload-dropzone').css('border-style', 'solid');
      // $('#upload-dropzone').css('border-width', '2px');
      $('#upload-dropzone').css('border-color', 'rgba(245, 133, 31, 0.6)');
    });

    this.on('dragleave', function(event) {
      $('#upload-dropzone').css('border-color', 'transparent');
    });

    this.on('addedfile', function(file) {
      // $(file.previewTemplate).remove();
    });

    this.on('success', function(file, json) {
      var id = json.id

      // $(file.previewTemplate).find('.dz-remove')
      $(file.previewTemplate).find('.dz-remove').on('click', function(event) {
        $.ajax({
          type: 'DELETE',
          url: '/images/' + id,
          success: function(res){
            $(file.previewTemplate).fadeOut();
          }
        });
      });

      // alert($(file.previewTemplate).find('.overlay'));
        $(file.previewTemplate).find('.overlay').on('click', function(event) {

          // $.ajax({
          //   type: 'POST',
          //   url: '/page/link',
          //   data: { 
          //     'image_id': id, 
          //   },
          //   success: function(res) {
          //     location.href = "<= page_link_path(id) %>";
