<div class="image-view">
  <div class="container">
  
  <% @images.each do |image| %>
  <div style="margin: 20px; float: left;">
    <%= link_to image_tag(image.photo(:thumb), id: "#{image.id}", style: "margin: auto;", size: "200x300"), link_page_path(image.id) %>
    <div style="text-align:center;"><%= image.photo_file_name%></div>
    </div>
  <% end %>
  
  </div>
</div>